<main>
    <div class="paralax-container">
        <nav>
            <div class="nav-wrapper">
                <ul class="right hide-on-med-and-down">
                    <li>
                        <a href="Home.html">Home</a>
                    </li>
                    <li>
                        <a href="Courses.html">Courses</a>
                    </li>
                    <li>
                        <a href="Team.html">Team</a>
                    </li>
                    <li>
                        <a href="Photos.html">Media</a>
                    </li>
                    <li>
                        <a class="dropdown-trigger" href="#!" data-target="dropdown1">Explore
                            <i class="material-icons right"></i>
                        </a>
                    </li>
                </ul>
            </div>
            <ul id="nav-mobile" class="sidenav">
            </ul>
            <a href="#" data-target="nav-mobile" class="sidenav-trigger">
                <i class="material-icons">menu</i>
            </a>
    </nav>
    <div class="row">
        <div class="col s12">
            <h1 id="h1">Brad's Top Dive Sites!</h1>
        </div>
    </div>
    <div class="row">
        <div class="col s6">
            <h2>{{this.spot}}</h2>
        </div>
    </div>
    <div class="row">
        <div class="col s6">
            <div class="slider">
                <ul class="slides">
                    {{#each this.images}}
                    <li>
                        <img src={{this}}>
                    </li>
                    {{/each}}
                </ul>
            </div>
        </div>
        <div class="col s6">
            <div class="card-panel" id="textBox">
                {{this.body}}
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col s6">
            <h4 id="mapHead">Get there!</h4>
        </div>
        <div class="col s 6">
            <h4 id="weatherCon">Weather Conditions</h4>
        </div>
    </div>
    <div class="row">
        <div class="col s6">
            <div id="map">
            </div>
        </div>
        <div class="col s6">
            <div class="card-panel" id="weatherHolder">
                <span>Today's Weather: {{this.desc}}</span>
                <br>
                <span>Current Temp: {{this.temp}}</span>
                <br>
                <span>Today's Low: {{this.minTemp}}</span>
                <br>
                <span>Today's High: {{this.maxTemp}}</span>
            </div>
        </div>
    </div>
    </div>
</main>

<script>
    $(document).ready(function () {
        $('.slider').slider();
        $('.parallax').parallax();
    });
</script>