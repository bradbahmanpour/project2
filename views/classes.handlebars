<script>
    $(document).ready(function () {
        $('.slider').slider();
        $('.parallax').parallax();
        var temp = window.location.pathname.split("/")
        if (temp[2] === "1") {
            $("#prevBut").hide()
        }


        $("#nextBut").click(function () {
            var newID = parseInt(temp[2]) + 1;
            window.location.href = "/classes/" + newID;
        })

        $("#prevBut").click(function () {
            var newID = parseInt(temp[2]) - 1;
            window.location.href = "/classes/" + newID;
        })
    });

    $(".dropdown-trigger").dropdown();
